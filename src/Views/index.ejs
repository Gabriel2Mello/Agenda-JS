<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>


        <div class="col-lg-8 my-3">
            <h1 class="text-center">Phone Book</h1>
            
            <%- include('includes/messages') %>
            
            <% if(contacts.length > 0) { %>
                <p class="text-center lead">Your contacts are here</p>
                <div class="responsive-table">
                    <table class="table my-3">
                        <% contacts.forEach(contact => { %>
                            <tr>
                                <td><%= contact.name %></td>
                                <td><%= contact.lastName %></td>
                                <td><%= contact.number %></td>
                                <td><%= contact.email %></td>
                                <td><a href="/contact/<%= contact._id %>">Edit</a></td>
                                <td><a class="text-danger" href="/contact/delete/<%= contact._id %>">Delete</a></td>
                            </tr>
                        <% }); %>
                    </table>
                    
                </div>
            <% } else { %>
                <p class="text-center lead">No contacts added yet.</p>
            <% } %>

        </div>


        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>

