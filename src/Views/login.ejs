<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>


        <div class="col-lg-8 my-4">
            <h1 class="text-center">Phone Book</h1>
            <p class="text-center lead">Log in or Sign up</p>

            <%- include('includes/messages'); %>

            <div class="row">
                <div class="col-lg">                    
                    <h4>Have an account?</h4>
                    
                    <div class="col-lg">
                        <p>Log in and enjoy</p>
                        <form action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    aria-describedby="emailHelp" placeholder="Email">                                
                            </div>
                            <div class="form-group my-4">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Password">
                            </div>
    
                            <button type="submit" class="btn btn-primary" style="margin-top: -8px;">Log in</button>
                        </form>
                    </div>
                </div>


                <div class="col-lg">
                    <h4>Create a new account</h4>
                    <p>It&#39;s quick and easy.</p>

                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email"
                                aria-describedby="emailHelp" placeholder="Email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with
                                anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-primary my-3">Sign up</button>
                    </form>
                </div>


            </div>


        </div>


        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>